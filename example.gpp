}

?function goal() {
	return on(1) == 0 & on(2) == 1 & on(3) == 2;
}

%function reward() {
	if (goal())
		return 100;
	else
		return 0;
}


{
	solve(2, reward())
		while (!goal())
			pick(%x in {2, 3})
				pick(%y in {1, 2})
					stack(%x, %y);
}
