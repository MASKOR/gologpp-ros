%fluent on(%x) {
initially:
	(1) = 0;
	(2) = 0;
	(3) = 0;
}

action stack(%x, %y) {
precondition:
	%x != %y
	& %x != 0
	& on(%x) != %y
	& !(exists (%z) (
		on(%z) == %x |
		on(%z) == %y
	))

effect:
	on(%x) = %y;
}

action say(%x, %y) {

effect:
	on(%x) = %y;

